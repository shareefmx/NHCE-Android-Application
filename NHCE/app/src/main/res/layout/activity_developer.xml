<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Developer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/text_margin"
                android:layout_marginTop="@dimen/text_margin"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="10sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/pu_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                tools:ignore="SpeakableTextPresentCheck">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image1"
                    android:layout_width="19dp"
                    android:layout_height="190dp"
                    android:layout_gravity="left"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:src="@drawable/pro1" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="19dp"
                    android:layout_height="190dp"
                    android:layout_gravity="left"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:src="@drawable/img5" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image3"
                    android:layout_width="19dp"
                    android:layout_height="190dp"
                    android:layout_gravity="right"
                    android:layout_margin="7dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:src="@drawable/pro2" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="7dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="17dp"
                android:layout_weight="1"
                android:fontFamily="@string/bold"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/purple_700"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                tools:ignore="SpeakableTextPresentCheck">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="7dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:fontFamily="@string/bold"
                    android:includeFontPadding="false"
                    android:text="Muhammed Shareef M"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_margin="7dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:fontFamily="@string/bold"
                    android:includeFontPadding="false"
                    android:text="Niranjan J Gowda"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="137dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="7dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="17dp"
                    android:layout_weight="1"
                    android:fontFamily="@string/bold"
                    android:includeFontPadding="false"
                    android:text="Nisham Ahamed"
                    android:textColor="@color/purple_700"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:includeFontPadding="false"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/grey1"
                android:textSize="@dimen/title_size2" />

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/full_name"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:includeFontPadding="false"
                android:text="App Developer"
                android:textAllCaps="true"
                android:textColor="@color/grey1"
                android:textSize="@dimen/title_size2" />


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
